<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/gameColor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Math game"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="15pt"
        android:layout_marginTop="10pt"
        android:layout_marginHorizontal="20pt"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/startGameBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30pt"
        android:layout_marginTop="20pt"
        android:text="Start game"
        android:textSize="10pt"
        android:background="@color/buttonColor" />

    <Button
        android:id="@+id/gameRulesBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30pt"
        android:layout_marginTop="20pt"
        android:background="@color/buttonColor"
        android:text="Game Rules"
        android:textSize="10pt"/>

    <Button
        android:id="@+id/ThirdButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30pt"
        android:layout_marginTop="20pt"
        android:background="@color/buttonColor"
        android:textSize="10pt"
        android:visibility="gone"/>

    <Button
        android:id="@+id/backBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30pt"
        android:layout_marginTop="20pt"
        android:background="@color/buttonColor"
        android:text="Back"
        android:textSize="10pt"
        android:visibility="gone"/>
</LinearLayout>